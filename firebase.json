{
	"hosting": {
		"public": "public",
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
		"headers": [
			{
				"source": "**/*.@(html|js|css)",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "no-cache, no-store, must-revalidate"
					}
				]
			},
			{
				"source": "**/*.@(jpg|jpeg|gif|png|svg|ico|webp|woff2)",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "public, max-age=604800"
					}
				]
			}
		]
	}
}
