{
	"hosting": {
		"public": "dist",
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
		"headers": [
			{
				"source": "**/*.html",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "no-cache, no-store, must-revalidate"
					}
				]
			},
			{
				"source": "assets/**",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "public, max-age=31536000, immutable"
					}
				]
			},
			{
				"source": "**/*.@(jpg|jpeg|gif|png|svg|ico|webp|woff2)",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "public, max-age=604800"
					}
				]
			}
		]
	},
	"functions": [
		{
			"source": "functions",
			"codebase": "default",
			"ignore": [
				"node_modules",
				".git",
				"firebase-debug.log",
				"firebase-debug.*.log",
				"*.local"
			]
		}
	],
	"firestore": {
		"rules": "firestore.rules"
	},
	"emulators": {
		"auth": {
			"port": 9099
		},
		"functions": {
			"port": 5001
		},
		"firestore": {
			"port": 8080
		},
		"ui": {
			"enabled": true
		},
		"singleProjectMode": true
	}
}
